{
  "compilerOptions": {
    "target": "ES2021",
    "types": ["node", "jest"],
    "module": "commonjs",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "outDir": "./dist",
  },
  "exclude": ["node_modules", "tests", "dist", "**/*spec.ts"]
}
